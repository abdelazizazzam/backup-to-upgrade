<odoo>
    <record id="hr_job_form_view_inherit_code" model="ir.ui.view">
          <field name="name">hr.job.form.inherit.code</field>
          <field name="model">hr.job</field>
          <field name="inherit_id" ref="hr.view_hr_job_form"/>
          <field name="arch" type="xml">
              <xpath expr="//h1" position="after">
                  <label for="job_code"/>
                  <h3><field name="job_code"/></h3>
              </xpath>
          </field>
      </record>
</odoo>