<odoo>
    <data>
        <record id="view_employee_form_allowance_manager" model="ir.ui.view">
            <field name="name">view.employee.form.allowance.manager</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='managers']" position="inside">
                    <field name="allowance_manager_id"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>